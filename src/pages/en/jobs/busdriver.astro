---
import Layout from "../../../layouts/Layout.astro"
---

<Layout title="Bus Driver" description="Complete guide to becoming a bus driver on Capitalyx">
    <main class="main-content">
        <!-- Page Title -->
        <section class="page-header">
            <div class="container">
                <div class="page-title-wrapper">
                    <div class="page-icon">
                        <i class="fas fa-bus"></i>
                    </div>
                    <div class="page-title-content">
                        <h1 class="page-main-title">Bus Driver</h1>
                        <p class="page-description">Complete guide to becoming a bus driver on Capitalyx</p>
                    </div>
                </div>
            </div>
        </section>

        <section class="job-section location-section">
            <div class="container">
                <h2 class="section-title">
                    <i class="fas fa-map-marker-alt"></i>
                    Where to Find
                </h2>
                <div class="location-grid">
                    <div class="location-item">
                        <div class="location-image">
                            <img src="/assets/img/jobs/busdriver/Zone.png" alt="Location on the map" loading="lazy">
                        </div>
                        <div class="location-content">
                            <h3 class="location-title">In Game</h3>
                        </div>
                    </div>
                    <div class="location-item">
                        <div class="location-image">
                            <img src="/assets/img/jobs/busdriver/Map.png" alt="Bus Station" loading="lazy">
                        </div>
                        <div class="location-content">
                            <h3 class="location-title">Location</h3>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- How to Start -->
        <section class="job-section">
            <div class="container">
            <h2 class="section-title">
                <i class="fas fa-play-circle"></i>
                How to Start
            </h2>
            <div class="steps-grid">
                <div class="step-item">
                <div class="step-number">1</div>
                <div class="step-content">
                    <h4>Get the Bus from Your Garage</h4>
                    <p>Access your garage and spawn the bus to start your day</p>
                </div>
                </div>
                <div class="step-item">
                <div class="step-number">2</div>
                <div class="step-content">
                    <h4>Go to the Bus Station</h4>
                    <p>Head to the bus station and select the route of your choice</p>
                </div>
                </div>
                <div class="step-item">
                <div class="step-number">3</div>
                <div class="step-content">
                    <h4>Complete the Route</h4>
                    <p>Finish the route while respecting all stops to receive your payment</p>
                </div>
                </div>
            </div>
            </div>
        </section>

        <!-- Rewards and Different Levels -->
        <section class="job-section">
            <div class="container">
                <h2 class="section-title">
                    <i class="fas fa-trophy"></i>
                    Unlocks and Rewards
                </h2>

                <!-- Tier and Vehicle Unlock Table -->
                <div class="table-section">
                    <div class="unlocks-table">
                        <div class="table-header">
                            <div>Required Level</div>
                            <div>Unlock</div>
                            <div>Earnings Bonus</div>
                        </div>
                        <div class="table-row">
                            <div class="level">1</div>
                            <div>Regional Buses</div>
                            <div>Access to short routes</div>
                        </div>
                        <div class="table-row">
                            <div class="level">20</div>
                            <div>Express Buses</div>
                            <div>+25% earnings for fast routes</div>
                        </div>
                        <div class="table-row">
                            <div class="level">45</div>
                            <div>Cargo Buses</div>
                            <div>+40% earnings, goods transportation</div>
                        </div>
                        <div class="table-row">
                            <div class="level">65</div>
                            <div>High-Speed Buses</div>
                            <div>+65% earnings for premium routes</div>
                        </div>
                        <div class="table-row">
                            <div class="level">80</div>
                            <div>Night Buses</div>
                            <div>Bonus +30% between 21h-7h</div>
                        </div>
                    </div>
                </div>

                <!-- Reward Table by Tier -->
                <div class="table-section">
                    <div class="rewards-table">
                        <div class="table-header">
                            <div>Type</div>
                            <div>Distance</div>
                            <div>Stops</div>
                            <div>Earnings</div>
                            <div>XP</div>
                        </div>
                        <div class="table-row">
                            <div class="level">Regional</div>
                            <div>0-5km</div>
                            <div>2-4 stops</div>
                            <div>300-500$</div>
                            <div>150</div>
                        </div>
                        <div class="table-row">
                            <div class="level">Express</div>
                            <div>5-15km</div>
                            <div>3-6 stops</div>
                            <div>600-900$</div>
                            <div>300</div>
                        </div>
                        <div class="table-row">
                            <div class="level">Cargo</div>
                            <div>10-25km</div>
                            <div>2-3 warehouses</div>
                            <div>1000-1400$</div>
                            <div>450</div>
                        </div>
                        <div class="table-row">
                            <div class="level">High-Speed</div>
                            <div>20km+</div>
                            <div>4+ stops</div>
                            <div>1500-2200$</div>
                            <div>600</div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="job-navigation">
            <div class="container">
                <a href="/en/jobs" class="btn-secondary">
                    <i class="fas fa-arrow-left"></i>
                    Back to Jobs
                </a>
            </div>
        </section>
    </main>

</Layout>

<style>
    @import url("../../../styles/busdriver.css");
</style>