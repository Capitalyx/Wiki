---
import Layout from "../../layouts/Layout.astro"
---

<Layout title="Guías" description="Guía para Capitalyx">
  <!-- Breadcrumbs -->
    <section class="breadcrumb">
        <div class="container">
            <nav class="breadcrumb-nav">
                <div class="breadcrumb-item">
                    <i class="fas fa-home breadcrumb-icon"></i>
                    <a href="/es">Inicio</a>
                </div>
                <span class="breadcrumb-separator">
                    <i class="fas fa-chevron-right"></i>
                </span>
                <div class="breadcrumb-item active">
                    <i class="fas fa-book-open breadcrumb-icon"></i>
                    <span>Guías</span>
                </div>
            </nav>
        </div>
    </section>

    <!-- Main Content -->
    <main class="main-content">
        <section class="page-hero">
            <div class="container">
                <h1 class="page-title">
                    <i class="fas fa-book-open"></i>
                    Guías del Servidor
                </h1>
                <p class="page-subtitle">Todas las guías para comenzar bien tu aventura tycoon en Capitalyx</p>
            </div>
        </section>

        <section class="content-section">
            <div class="container">
                <!-- Botón TOC fijo -->
                <button class="toc-fixed-button" onclick="openTOCModal()" title="Tabla de contenidos">
                    <i class="fas fa-list"></i>
                </button>

                <!-- Modal TOC -->
                <div class="toc-modal" id="tocModal">
                    <div class="toc-modal-content">
                        <div class="toc-modal-header">
                            <h3 class="toc-modal-title">
                                <i class="fas fa-list"></i>
                                Tabla de contenidos
                            </h3>
                            <button class="toc-modal-close" onclick="closeTOCModal()">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                        <ul class="toc-modal-list">
                            <li class="toc-modal-item">
                                <a href="#guides-debutant" class="toc-modal-link" onclick="closeTOCModal()">
                                    <i class="fas fa-play"></i>
                                    Guías para Principiantes
                                </a>
                            </li>
                            <li class="toc-modal-item">
                                <a href="#metiers-business" class="toc-modal-link" onclick="closeTOCModal()">
                                    <i class="fas fa-dollar-sign"></i>
                                    Trabajos & Negocios
                                </a>
                            </li>
                            <li class="toc-modal-item">
                                <a href="#communication" class="toc-modal-link" onclick="closeTOCModal()">
                                    <i class="fas fa-comments"></i>
                                    Comunicación & Cooperación
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="guides-grid">
                    <div class="guide-category" id="guides-debutant">
                        <div class="category-header">
                            <i class="fas fa-play"></i>
                            <h2>Guías para Principiantes</h2>
                        </div>
                        <div class="guide-list">
                            <div class="guide-item">
                                <div class="guide-icon">
                                    <i class="fas fa-server"></i>
                                </div>
                                <div class="guide-content">
                                    <h3>Cómo Unirse al Servidor</h3>
                                    <p>Instrucciones completas para conectarte a Capitalyx por primera vez.</p>
                                    <div class="guide-steps">
                                        <ol>
                                            <li>Abrir FiveM</li>
                                            <li>Ir a la pestaña de Servidores</li>
                                            <li>Buscar "Capitalyx"</li>
                                            <li>Hacer clic en Conectar</li>
                                        </ol>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="guide-category" id="metiers-business">
                        <div class="category-header">
                            <i class="fas fa-dollar-sign"></i>
                            <h2>Trabajos & Negocios</h2>
                        </div>
                        <div class="guide-list">
                            <div class="guide-item">
                                <div class="guide-icon">
                                    <i class="fas fa-briefcase"></i>
                                </div>
                                <div class="guide-content">
                                    <h3>Elegir tu Trabajo</h3>
                                    <p>Guía para seleccionar el trabajo que corresponde a tu estilo de juego.</p>
                                    <div class="money-methods">
                                        <ul>
                                            <li><strong>Taxi:</strong> Transporte de pasajeros en la ciudad</li>
                                            <li><strong>Conductor de Tren:</strong> Transporte de pasajeros y mercancías</li>
                                            <li><strong>Transportista:</strong> Entrega de paquetes</li>
                                            <li><strong>Conductor de Autobús:</strong> Transporte público de pasajeros</li>
                                            <li><strong>EMS:</strong> Servicios de ambulancia e intervención de emergencia</li>
                                            <li><strong>Conductor de Helicóptero:</strong> Transporte aéreo de pasajeros</li>
                                            <li><strong>Mecánico:</strong> Reparación y mantenimiento de vehículos</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="guide-category" id="communication">
                        <div class="category-header">
                            <i class="fas fa-comments"></i>
                            <h2>Comunicación & Cooperación</h2>
                        </div>
                        <div class="guide-list">
                            <div class="guide-item">
                                <div class="guide-icon">
                                    <i class="fas fa-headset"></i>
                                </div>
                                <div class="guide-content">
                                    <h3>Sistemas de Comunicación</h3>
                                    <p>Guía de los diferentes medios para comunicarte y colaborar.</p>
                                    <div class="chat-commands">
                                        <ul>
                                            <li><strong>/trade</strong> - Proponer un intercambio</li>
                                            <li><strong>/help</strong> - Pedir ayuda</li>
                                            <li><strong>/market</strong> - Acceder al mercado</li>
                                            <li><strong>/team</strong> - Comunicación en equipo</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Navegación rápida -->
                <div class="quick-navigation">
                    <h3><i class="fas fa-compass"></i> Navegación rápida</h3>
                    <div class="nav-links">
                        <a href="/es/rules" class="nav-link-card">
                            <i class="fas fa-gavel"></i>
                            <div>
                                <h4>Reglamento</h4>
                                <p>Todas las reglas del servidor</p>
                            </div>
                        </a>
                        <a href="/es/commands" class="nav-link-card">
                            <i class="fas fa-terminal"></i>
                            <div>
                                <h4>Comandos</h4>
                                <p>Lista de comandos útiles</p>
                            </div>
                        </a>
                        <a href="/es/jobs" class="nav-link-card">
                            <i class="fas fa-briefcase"></i>
                            <div>
                                <h4>Trabajos</h4>
                                <p>Guía de los trabajos disponibles</p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </main>
</Layout>

<style>
  @import url("../../styles/guides.css");
</style>
