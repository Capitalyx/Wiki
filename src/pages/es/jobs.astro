---
import Layout from "../../layouts/Layout.astro"
---

<Layout title="Trabajos" description="Trabajos disponibles en el servidor">
    <section class="breadcrumb">
        <div class="container">
            <nav class="breadcrumb-nav">
                <div class="breadcrumb-item">
                    <i class="fas fa-home breadcrumb-icon"></i>
                    <a href="/">Inicio</a>
                </div>
                <span class="breadcrumb-separator">
                    <i class="fas fa-chevron-right"></i>
                </span>
                <div class="breadcrumb-item active">
                    <i class="fas fa-briefcase breadcrumb-icon"></i>
                    <span>Trabajos</span>
                </div>
            </nav>
        </div>
    </section>

    <!-- Main Content -->
    <main class="main-content">
        <section class="page-hero">
            <div class="container">
                <h1 class="page-title">
                    <i class="fas fa-briefcase"></i>
                    Trabajos Disponibles
                </h1>
                <p class="page-subtitle">Descubre todos los empleos disponibles en Capitalyx</p>
            </div>
        </section>

        <section class="content-section">
            <div class="container">
                <div class="jobs-grid">
                    <!-- Bus -->
                    <a href="/jobs/busdriver" class="job-card">
                        <i class="fas fa-bus job-icon"></i>
                        <h3 class="job-title">Conductor de Autobús</h3>
                        <p class="job-description">Transporte público de ciudadanos</p>
                    </a>

                    <!-- Camions -->
                    <a href="/jobs/truckdriver" class="job-card">
                        <i class="fas fa-truck job-icon"></i>
                        <h3 class="job-title">Conductor de Camión</h3>
                        <p class="job-description">Transporte de mercancías</p>
                    </a>

                    <!-- Hélicoptère -->
                    <a href="/jobs/helicopterdriver" class="job-card">
                        <i class="fas fa-helicopter job-icon"></i>
                        <h3 class="job-title">Piloto de Helicóptero</h3>
                        <p class="job-description">Transporte aéreo y misiones especiales</p>
                    </a>

                    <!-- Avions -->
                    <a href="/jobs/avionpilot" class="job-card">
                        <i class="fas fa-plane job-icon"></i>
                        <h3 class="job-title">Piloto de Avión</h3>
                        <p class="job-description">Transporte aéreo de larga distancia</p>
                    </a>

                    <!-- EMS -->
                    <a href="/jobs/ems" class="job-card">
                        <i class="fas fa-ambulance job-icon"></i>
                        <h3 class="job-title">EMS / Ambulanciero</h3>
                        <p class="job-description">Servicios médicos de emergencia</p>
                    </a>

                    <!-- Taxi -->
                    <a href="/jobs/cab" class="job-card">
                        <i class="fas fa-taxi job-icon"></i>
                        <h3 class="job-title">Conductor de Taxi</h3>
                        <p class="job-description">Transporte privado de pasajeros</p>
                    </a>

                    <!-- Livreur/Transporteur -->
                    <a href="/jobs/courier" class="job-card">
                        <i class="fas fa-shipping-fast job-icon"></i>
                        <h3 class="job-title">Repartidor / Transportista</h3>
                        <p class="job-description">Entrega y transporte de paquetes</p>
                    </a>

                    <!-- Conducteur de Train -->
                    <a href="/jobs/trainconductor" class="job-card">
                        <i class="fas fa-train job-icon"></i>
                        <h3 class="job-title">Conductor de Tren</h3>
                        <p class="job-description">Conducción de trenes</p>
                    </a>
                </div>

                <!-- Navigation rapide -->
                <div class="quick-navigation">
                    <h3><i class="fas fa-compass"></i> Navegación rápida</h3>
                    <div class="nav-links">
                        <a href="rules" class="nav-link-card">
                            <i class="fas fa-gavel"></i>
                            <div>
                                <h4>Reglamento</h4>
                                <p>Reglas de trabajos y actividades</p>
                            </div>
                        </a>
                        <a href="guides" class="nav-link-card">
                            <i class="fas fa-book-open"></i>
                            <div>
                                <h4>Guías</h4>
                                <p>Cómo elegir tu trabajo</p>
                            </div>
                        </a>
                        <a href="commands" class="nav-link-card">
                            <i class="fas fa-terminal"></i>
                            <div>
                                <h4>Comandos</h4>
                                <p>Comandos útiles para los trabajos</p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </main>
</Layout>

<style>
    @import url("../../styles/jobs.css");
</style>