---
import Layout from "../../../layouts/Layout.astro"
---

<Layout title="Conductor de Autobús" description="Guía completa para convertirse en conductor de autobús en Capitalyx">
    <main class="main-content">
        <!-- Titre de la page -->
        <section class="page-header">
            <div class="container">
                <div class="page-title-wrapper">
                    <div class="page-icon">
                        <i class="fas fa-bus"></i>
                    </div>
                    <div class="page-title-content">
                        <h1 class="page-main-title">Conductor de Autobús</h1>
                        <p class="page-description">Guía completa para convertirse en conductor de autobús en Capitalyx</p>
                    </div>
                </div>
            </div>
        </section>

        <section class="job-section location-section">
            <div class="container">
                <h2 class="section-title">
                    <i class="fas fa-map-marker-alt"></i>
                    Dónde Buscar
                </h2>
                <div class="location-grid">
                    <div class="location-item">
                        <div class="location-image">
                            <img src="/assets/img/jobs/busdriver/busstation.webp" alt="Terminal de Autobús" loading="lazy">
                        </div>
                        <div class="location-content">
                            <h3 class="location-title">Terminal de Autobús</h3>
                            <p class="location-description">Dirígete a la terminal de autobús para obtener tu certificación 
                                de conductor y acceder a los autobuses</p>
                        </div>
                    </div>
                    <div class="location-item">
                        <div class="location-image">
                            <img src="/assets/img/jobs/busdriver/busmap.webp" alt="Ubicación en el mapa" loading="lazy">
                        </div>
                        <div class="location-content">
                            <h3 class="location-title">Ubicación</h3>
                            <p class="location-description">La terminal de autobús se encuentra al este de la ciudad. Cerca del hospital de PillBox.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Comment commencer -->
        <section class="job-section">
            <div class="container">
                <h2 class="section-title">
                    <i class="fas fa-play-circle"></i>
                    Cómo Comenzar
                </h2>
                <div class="steps-grid">
                    <div class="step-item">
                        <div class="step-number">1</div>
                        <div class="step-content">
                            <h4>Acceder al Autobús</h4>
                            <p>Activa el marcador del depósito para que aparezca tu autobús</p>
                        </div>
                    </div>
                    <div class="step-item">
                        <div class="step-number">2</div>
                        <div class="step-content">
                            <h4>Cargar Pasajeros</h4>
                            <p>Sigue la ruta y detente en las paradas para recoger a los viajeros</p>
                        </div>
                    </div>
                    <div class="step-item">
                        <div class="step-number">3</div>
                        <div class="step-content">
                            <h4>Completar el Trayecto</h4>
                            <p>Respeta los horarios y las paradas para recibir tu remuneración</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Récompenses et différents niveaux-->
        <section class="job-section">
            <div class="container">
                <h2 class="section-title">
                    <i class="fas fa-trophy"></i>
                    Desbloqueos y Recompensas
                </h2>

                <!-- Tableau des déblocages de tiers et véhicules -->
                <div class="table-section">
                    <div class="unlocks-table">
                        <div class="table-header">
                            <div>Nivel Requerido</div>
                            <div>Desbloqueo</div>
                            <div>Bonificación de Ganancias</div>
                        </div>
                        <div class="table-row">
                            <div class="level">1</div>
                            <div>Autobuses Regionales</div>
                            <div>Acceso a rutas cortas</div>
                        </div>
                        <div class="table-row">
                            <div class="level">20</div>
                            <div>Autobuses Express</div>
                            <div>+25% de ganancias en trayectos rápidos</div>
                        </div>
                        <div class="table-row">
                            <div class="level">45</div>
                            <div>Autobuses de Carga</div>
                            <div>+40% de ganancias, transporte de mercancías</div>
                        </div>
                        <div class="table-row">
                            <div class="level">65</div>
                            <div>Autobuses de Alta Velocidad</div>
                            <div>+65% de ganancias para rutas premium</div>
                        </div>
                        <div class="table-row">
                            <div class="level">80</div>
                            <div>Autobuses Nocturnos</div>
                            <div>Bonificación +30% entre 21h-7h</div>
                        </div>
                    </div>
                </div>

                <!-- Tableau des récompenses par tier -->
                <div class="table-section">
                    <div class="rewards-table">
                        <div class="table-header">
                            <div>Tipo</div>
                            <div>Distancia</div>
                            <div>Paradas</div>
                            <div>Ganancias</div>
                            <div>XP</div>
                        </div>
                        <div class="table-row">
                            <div class="level">Regional</div>
                            <div>0-5km</div>
                            <div>2-4 estaciones</div>
                            <div>300-500$</div>
                            <div>150</div>
                        </div>
                        <div class="table-row">
                            <div class="level">Express</div>
                            <div>5-15km</div>
                            <div>3-6 estaciones</div>
                            <div>600-900$</div>
                            <div>300</div>
                        </div>
                        <div class="table-row">
                            <div class="level">Carga</div>
                            <div>10-25km</div>
                            <div>2-3 almacenes</div>
                            <div>1000-1400$</div>
                            <div>450</div>
                        </div>
                        <div class="table-row">
                            <div class="level">Alta Velocidad</div>
                            <div>20km+</div>
                            <div>4+ estaciones</div>
                            <div>1500-2200$</div>
                            <div>600</div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="job-navigation">
            <div class="container">
                <a href="/es/jobs" class="btn-secondary">
                    <i class="fas fa-arrow-left"></i>
                    Volver a los trabajos
                </a>
            </div>
        </section>
    </main>

</Layout>

<style>
    @import url("../../../styles/busdriver.css");
</style>