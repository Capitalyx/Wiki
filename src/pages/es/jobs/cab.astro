---
import Layout from "../../../layouts/Layout.astro"
---

<Layout title="Conductor de Taxi | Capitalyx Wiki" description="Guía completa para convertirse en conductor de taxi en Capitalyx">
    <main class="main-content">
        <!-- Titre de la page -->
        <section class="page-header">
            <div class="container">
                <div class="page-title-wrapper">
                    <div class="page-icon">
                        <i class="fas fa-taxi"></i>
                    </div>
                    <div class="page-title-content">
                        <h1 class="page-main-title">Conductor de Taxi</h1>
                        <p class="page-description">Guía completa para convertirse en conductor de taxi en Capitalyx</p>
                    </div>
                </div>
            </div>
        </section>

        <section class="job-section location-section">
            <div class="container">
                <h2 class="section-title">
                    <i class="fas fa-map-marker-alt"></i>
                    Dónde Buscar ?
                </h2>
                <div class="location-grid">
                    <div class="location-item">
                        <div class="location-image">
                            <img src="/assets/img/jobs/cab/cabbuilding.webp" alt="Edificio de taxis" loading="lazy">
                        </div>
                        <div class="location-content">
                            <h3 class="location-title">Centro de Taxis</h3>
                            <p class="location-description">Dirígete al centro de taxis para obtener tu licencia
                                y alquilar tu primer vehículo</p>
                        </div>
                    </div>
                    <div class="location-item">
                        <div class="location-image">
                            <img src="/assets/img/jobs/cab/cabmap.png" alt="Ubicación en el mapa" loading="lazy">
                        </div>
                        <div class="location-content">
                            <h3 class="location-title">Ubicación</h3>
                            <p class="location-description">Consulta el mapa para encontrar la ubicación exacta de la 
                                oficina de taxis en la ciudad. Se encuentra justo al sur del Casino en el este de la ciudad.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Comment commencer -->
        <section class="job-section">
            <div class="container">
                <h2 class="section-title">
                    <i class="fas fa-play-circle"></i>
                    Cómo Comenzar ?
                </h2>
                <div class="steps-grid">
                    <div class="step-item">
                        <div class="step-number">1</div>
                        <div class="step-content">
                            <h4>Ir al Concesionario</h4>
                            <p>Ve al concesionario para recoger tu primer vehículo (gratuito)</p>
                        </div>
                    </div>
                    <div class="step-item">
                        <div class="step-number">2</div>
                        <div class="step-content">
                            <h4>Elige Tu Ruta</h4>
                            <p>Elige según tu nivel la ruta que deseas realizar.</p>
                        </div>
                    </div>
                    <div class="step-item">
                        <div class="step-number">3</div>
                        <div class="step-content">
                            <h4>Tomar Clientes</h4>
                            <p>Sigue el marcador en el mapa para recoger al cliente y llevarlo</p>
                        </div>
                    </div>
                    <div class="step-item">
                        <div class="step-number">4</div>
                        <div class="step-content">
                            <h4>Múltiples Clientes</h4>
                            <p>Puedes tener múltiples paradas antes de terminar tu servicio</p>
                        </div>
                    </div>
                    <div class="step-item">
                        <div class="step-number">5</div>
                        <div class="step-content">
                            <h4>Recibir la Recompensa</h4>
                            <p>Cobra tu pago bonus de fin de servicio</p>
                        </div>
                    </div>
                    <div class="step-item">
                        <div class="step-number">6</div>
                        <div class="step-content">
                            <h4>Repetir el Proceso</h4>
                            <p>Encadena viajes para maximizar tus ganancias</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Récompenses et différents niveaux-->
        <section class="job-section">
            <div class="container">
                <h2 class="section-title">
                    <i class="fas fa-trophy"></i>
                    Desbloqueos y Recompensas
                </h2>

                <!-- Tableau des déblocages de tiers de courses -->
                <div class="table-section">
                    <h3 class="table-subtitle">
                        <i class="fas fa-route"></i>
                        Tiers de Viajes
                    </h3>
                    <div class="unlocks-table">
                        <div class="table-header">
                            <div>Nivel Requerido</div>
                            <div>Tier de Viaje</div>
                            <div>Ubicación</div>
                        </div>
                        <div class="table-row">
                            <div class="level">1</div>
                            <div>Viajes Tier 1</div>
                            <div>Barrio del Casino - Este de Los Santos</div>
                        </div>
                        <div class="table-row">
                            <div class="level">10</div>
                            <div>Viajes Tier 2</div>
                            <div>Centro de la Ciudad - Norte de Los Santos</div>
                        </div>
                        <div class="table-row">
                            <div class="level">40</div>
                            <div>Viajes Tier 3</div>
                            <div>Del Perro - LSIA - Terminal</div>
                        </div>
                        <div class="table-row">
                            <div class="level">60</div>
                            <div>Viajes Tier 4</div>
                            <div>Sandy Shores - Paleto Bay - Grapeseed</div>
                        </div>
                        <div class="table-row">
                            <div class="level">75</div>
                            <div>Viajes Nocturnos</div>
                            <div>Bonificación +15% entre 22h y 6h</div>
                        </div>
                    </div>
                </div>

                <!-- Tableau des véhicules débloqués -->
                <div class="table-section">
                    <h3 class="table-subtitle">
                        <i class="fas fa-car"></i>
                        Vehículos Desbloqueados
                    </h3>
                    <div class="unlocks-table">
                        <div class="table-header">
                            <div>Nivel Requerido</div>
                            <div>Vehículo</div>
                            <div>Ventajas</div>
                            <div>Precio</div>
                        </div>
                        <div class="table-row">
                            <div class="level">1</div>
                            <div>Taxi</div>
                            <div>Sin Bonificación</div>
                            <div>Gratuito</div>
                        </div>
                        <div class="table-row">
                            <div class="level">20</div>
                            <div>Dilettante</div>
                            <div>Leve bonificación general en $ y XP</div>
                            <div>100 000 $</div>
                        </div>
                        <div class="table-row">
                            <div class="level">45</div>
                            <div>Cabby</div>
                            <div>Bonificación XP y $, Penalización en velocidad</div>
                            <div>200 000 $</div>
                        </div>
                        <div class="table-row">
                            <div class="level">60</div>
                            <div>Asterope</div>
                            <div>Bonificación significativa de velocidad y maniobrabilidad</div>
                            <div>300 000 $</div>
                        </div>
                    </div>
                </div>

                <!-- Tableau des récompenses par tier -->
                <div class="table-section">
                    <h3 class="table-subtitle">
                        <i class="fas fa-dollar-sign"></i>
                        Recompensas por Tier
                    </h3>
                    <div class="rewards-table">
                        <div class="table-header">
                            <div>Tier</div>
                            <div>Distancia</div>
                            <div>Paradas Requeridas</div>
                            <div>Ganancias</div>
                            <div>XP</div>
                        </div>
                        <div class="table-row">
                            <div class="level">1</div>
                            <div>0-2km</div>
                            <div>1-2 paradas</div>
                            <div>150-250$</div>
                            <div>100</div>
                        </div>
                        <div class="table-row">
                            <div class="level">2</div>
                            <div>2-5km</div>
                            <div>3-4 paradas</div>
                            <div>300-450$</div>
                            <div>200</div>
                        </div>
                        <div class="table-row">
                            <div class="level">3</div>
                            <div>5-10km</div>
                            <div>5-6 paradas</div>
                            <div>500-750$</div>
                            <div>300</div>
                        </div>
                        <div class="table-row">
                            <div class="level">4</div>
                            <div>10km+</div>
                            <div>7+ paradas</div>
                            <div>800-1200$</div>
                            <div>400</div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="job-navigation">
            <div class="container">
                <a href="/es/jobs" class="btn-secondary">
                    <i class="fas fa-arrow-left"></i>
                    Volver a los trabajos
                </a>
            </div>
        </section>
    </main>
</Layout>

<style>
    @import url("../../../styles/cab.css");
</style>