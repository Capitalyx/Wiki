---
import Layout from "../../../layouts/Layout.astro"
---

<Layout title="Mensajero / Repartidor" description="Guía completa para convertirse en mensajero de paquetes en Capitalyx">
    <main class="main-content">
        <!-- Titre de la page -->
        <section class="page-header">
            <div class="container">
                <div class="page-title-wrapper">
                    <div class="page-icon">
                        <i class="fas fa-shipping-fast"></i>
                    </div>
                    <div class="page-title-content">
                        <h1 class="page-main-title">Mensajero / Repartidor</h1>
                        <p class="page-description">Guía completa para convertirse en mensajero de paquetes en Capitalyx</p>
                    </div>
                </div>
            </div>
        </section>

        <section class="job-section location-section">
            <div class="container">
                <h2 class="section-title">
                    <i class="fas fa-map-marker-alt"></i>
                    Dónde Buscar
                </h2>
                <div class="location-grid">
                    <div class="location-item">
                        <div class="location-image">
                            <img src="/assets/img/jobs/courier/courierbuilding.webp" alt="Centro de Entrega" loading="lazy">
                        </div>
                        <div class="location-content">
                            <h3 class="location-title">Centro de Entrega</h3>
                            <p class="location-description">Dirígete al centro de entrega para obtener tu insignia 
                                y recoger tu primer vehículo de entrega</p>
                        </div>
                    </div>
                    <div class="location-item">
                        <div class="location-image">
                            <img src="/assets/img/jobs/courier/couriermap.webp" alt="Ubicación en el mapa" loading="lazy">
                        </div>
                        <div class="location-content">
                            <h3 class="location-title">Ubicación</h3>
                            <p class="location-description">El centro de entrega se encuentra en la zona industrial, 
                                cerca de los almacenes principales. Consulta el mapa para la ubicación exacta.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Comment commencer -->
        <section class="job-section">
            <div class="container">
                <h2 class="section-title">
                    <i class="fas fa-play-circle"></i>
                    Cómo Comenzar
                </h2>
                <div class="steps-grid">
                    <div class="step-item">
                        <div class="step-number">1</div>
                        <div class="step-content">
                            <h4>Recoger el Vehículo</h4>
                            <p>Activa el marcador del garaje para que aparezca tu vehículo de entrega</p>
                        </div>
                    </div>
                    <div class="step-item">
                        <div class="step-number">2</div>
                        <div class="step-content">
                            <h4>Recoger Paquetes</h4>
                            <p>Sigue el marcador para cargar los paquetes en tu vehículo</p>
                        </div>
                    </div>
                    <div class="step-item">
                        <div class="step-number">3</div>
                        <div class="step-content">
                            <h4>Entregar Paquetes</h4>
                            <p>Entrega los paquetes en las direcciones indicadas y cobra tu remuneración</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Récompenses et différents niveaux-->
        <section class="job-section">
            <div class="container">
                <h2 class="section-title">
                    <i class="fas fa-trophy"></i>
                    Desbloqueos y Recompensas
                </h2>

                <!-- Tableau des déblocages de tiers et véhicules -->
                <div class="table-section">
                    <div class="unlocks-table">
                        <div class="table-header">
                            <div>Nivel Requerido</div>
                            <div>Desbloqueo</div>
                            <div>Bonificación de Ganancias</div>
                        </div>
                        <div class="table-row">
                            <div class="level">1</div>
                            <div>Entregas Locales</div>
                            <div>Acceso a entregas de barrio</div>
                        </div>
                        <div class="table-row">
                            <div class="level">15</div>
                            <div>Entregas Express</div>
                            <div>+20% de ganancias para entregas urgentes</div>
                        </div>
                        <div class="table-row">
                            <div class="level">30</div>
                            <div>Entregas Frágiles</div>
                            <div>+35% de ganancias, bonificación de precaución</div>
                        </div>
                        <div class="table-row">
                            <div class="level">50</div>
                            <div>Entregas VIP</div>
                            <div>+60% de ganancias para clientes privilegiados</div>
                        </div>
                        <div class="table-row">
                            <div class="level">70</div>
                            <div>Entregas Nocturnas</div>
                            <div>Bonificación +25% entre 20h-8h</div>
                        </div>
                    </div>
                </div>

                <!-- Tableau des récompenses par tier -->
                <div class="table-section">
                    <div class="rewards-table">
                        <div class="table-header">
                            <div>Tipo</div>
                            <div>Distancia</div>
                            <div>Paquetes</div>
                            <div>Ganancias</div>
                            <div>XP</div>
                        </div>
                        <div class="table-row">
                            <div class="level">Local</div>
                            <div>0-3km</div>
                            <div>1-3 paquetes</div>
                            <div>200-350$</div>
                            <div>120</div>
                        </div>
                        <div class="table-row">
                            <div class="level">Express</div>
                            <div>3-7km</div>
                            <div>4-6 paquetes</div>
                            <div>400-600$</div>
                            <div>250</div>
                        </div>
                        <div class="table-row">
                            <div class="level">Frágil</div>
                            <div>5-12km</div>
                            <div>2-4 paquetes</div>
                            <div>600-900$</div>
                            <div>350</div>
                        </div>
                        <div class="table-row">
                            <div class="level">VIP</div>
                            <div>8km+</div>
                            <div>1-2 paquetes</div>
                            <div>1000-1500$</div>
                            <div>500</div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="job-navigation">
            <div class="container">
                <a href="/es/jobs" class="btn-secondary">
                    <i class="fas fa-arrow-left"></i>
                    Volver a los trabajos
                </a>
            </div>
        </section>
    </main>

</Layout>

<style>
    @import url("../../../styles/courier.css");
</style>