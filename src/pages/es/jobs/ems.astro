---
import Layout from "../../../layouts/Layout.astro"
---

<Layout title="EMS / Paramédico" description="Guía completa para convertirse en EMS / Paramédico en Capitalyx">
    <main class="main-content">
        <!-- Titre de la page -->
        <section class="page-header">
            <div class="container">
                <div class="page-title-wrapper">
                    <div class="page-icon">
                        <i class="fas fa-ambulance"></i>
                    </div>
                    <div class="page-title-content">
                        <h1 class="page-main-title">EMS / Paramédico</h1>
                        <p class="page-description">Guía completa para convertirse en EMS / Paramédico en Capitalyx</p>
                    </div>
                </div>
            </div>
        </section>

        <section class="job-section location-section">
            <div class="container">
                <h2 class="section-title">
                    <i class="fas fa-map-marker-alt"></i>
                    Dónde Buscar
                </h2>
                <div class="location-grid">
                    <div class="location-item">
                        <div class="location-image">
                            <img src="/assets/img/jobs/busdriver/busstation.webp" alt="Hospital" loading="lazy">
                        </div>
                        <div class="location-content">
                            <h3 class="location-title">Hospital Central</h3>
                            <p class="location-description">Dirígete al hospital para obtener tu certificación 
                                de paramédico y acceder a ambulancias</p>
                        </div>
                    </div>
                    <div class="location-item">
                        <div class="location-image">
                            <img src="/assets/img/jobs/busdriver/busmap.webp" alt="Ubicación en el mapa" loading="lazy">
                        </div>
                        <div class="location-content">
                            <h3 class="location-title">Ubicación</h3>
                            <p class="location-description">El hospital se encuentra al este de la ciudad. Cerca del centro comercial de PillBox.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Comment commencer -->
        <section class="job-section">
            <div class="container">
                <h2 class="section-title">
                    <i class="fas fa-play-circle"></i>
                    Cómo Comenzar
                </h2>
                <div class="steps-grid">
                    <div class="step-item">
                        <div class="step-number">1</div>
                        <div class="step-content">
                            <h4>Acceder a la Ambulancia</h4>
                            <p>Activa el marcador del depósito para que aparezca tu ambulancia</p>
                        </div>
                    </div>
                    <div class="step-item">
                        <div class="step-number">2</div>
                        <div class="step-content">
                            <h4>Recoger Pacientes</h4>
                            <p>Sigue la ruta y detente en los puntos de recogida para transportar a los pacientes</p>
                        </div>
                    </div>
                    <div class="step-item">
                        <div class="step-number">3</div>
                        <div class="step-content">
                            <h4>Completar el Trayecto</h4>
                            <p>Respeta los horarios y entregas para recibir tu remuneración</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Récompenses et différents niveaux-->
        <section class="job-section">
            <div class="container">
                <h2 class="section-title">
                    <i class="fas fa-trophy"></i>
                    Desbloqueos y Recompensas
                </h2>

                <!-- Tableau des déblocages de tiers et véhicules -->
                <div class="table-section">
                    <div class="unlocks-table">
                        <div class="table-header">
                            <div>Nivel Requerido</div>
                            <div>Desbloqueo</div>
                            <div>Bonificación de Ganancias</div>
                        </div>
                        <div class="table-row">
                            <div class="level">1</div>
                            <div>Respuestas Básicas</div>
                            <div>Acceso a llamadas estándar</div>
                        </div>
                        <div class="table-row">
                            <div class="level">20</div>
                            <div>Respuestas Avanzadas</div>
                            <div>+25% de ganancias en emergencias</div>
                        </div>
                        <div class="table-row">
                            <div class="level">45</div>
                            <div>Respuestas Especiales</div>
                            <div>+40% de ganancias, manejo de traumas</div>
                        </div>
                        <div class="table-row">
                            <div class="level">65</div>
                            <div>Respuestas de Élite</div>
                            <div>+65% de ganancias para llamadas premium</div>
                        </div>
                        <div class="table-row">
                            <div class="level">80</div>
                            <div>Respuestas Nocturnas</div>
                            <div>Bonificación +30% entre 21h-7h</div>
                        </div>
                    </div>
                </div>

                <!-- Tableau des récompenses par tier -->
                <div class="table-section">
                    <div class="rewards-table">
                        <div class="table-header">
                            <div>Tipo</div>
                            <div>Distancia</div>
                            <div>Paradas</div>
                            <div>Ganancias</div>
                            <div>XP</div>
                        </div>
                        <div class="table-row">
                            <div class="level">Estándar</div>
                            <div>0-5km</div>
                            <div>2-4 hospitales</div>
                            <div>300-500$</div>
                            <div>150</div>
                        </div>
                        <div class="table-row">
                            <div class="level">Urgencia</div>
                            <div>5-15km</div>
                            <div>3-6 hospitales</div>
                            <div>600-900$</div>
                            <div>300</div>
                        </div>
                        <div class="table-row">
                            <div class="level">Trauma</div>
                            <div>10-25km</div>
                            <div>2-3 centros</div>
                            <div>1000-1400$</div>
                            <div>450</div>
                        </div>
                        <div class="table-row">
                            <div class="level">Crítico</div>
                            <div>20km+</div>
                            <div>4+ hospitales</div>
                            <div>1500-2200$</div>
                            <div>600</div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="job-navigation">
            <div class="container">
                <a href="/es/jobs" class="btn-secondary">
                    <i class="fas fa-arrow-left"></i>
                    Volver a los trabajos
                </a>
            </div>
        </section>
    </main>

</Layout>

<style>
    @import url("../../../styles/ems.css");
</style>