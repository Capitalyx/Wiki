---
import Layout from "../../../layouts/Layout.astro"
---

<Layout title="Piloto de Helicóptero" description="Guía completa para convertirse en piloto de helicóptero en Capitalyx">
    <main class="main-content">
        <!-- Título de la página -->
        <section class="page-header">
            <div class="container">
                <div class="page-title-wrapper">
                    <div class="page-icon">
                        <i class="fas fa-helicopter"></i>
                    </div>
                    <div class="page-title-content">
                        <h1 class="page-main-title">Piloto de Helicóptero</h1>
                        <p class="page-description">Guía completa para convertirse en piloto de helicóptero en Capitalyx</p>
                    </div>
                </div>
            </div>
        </section>

        <section class="job-section location-section">
            <div class="container">
                <h2 class="section-title">
                    <i class="fas fa-map-marker-alt"></i>
                    Dónde Buscar
                </h2>
                <div class="location-grid">
                    <div class="location-item">
                        <div class="location-image">
                            <img src="/assets/img/jobs/helicopter/Zone.png" alt="Ubicación en el mapa" loading="lazy">
                        </div>
                        <div class="location-content">
                            <h3 class="location-title">En Juego</h3>
                        </div>
                    </div>
                    <div class="location-item">
                        <div class="location-image">
                            <img src="/assets/img/jobs/helicopter/Map.png" alt="Ubicación del Heliport" loading="lazy">
                        </div>
                        <div class="location-content">
                            <h3 class="location-title">Ubicación</h3>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Cómo Comenzar -->
        <section class="job-section">
            <div class="container">
            <h2 class="section-title">
                <i class="fas fa-play-circle"></i>
                Cómo Comenzar
            </h2>
            <div class="steps-grid">
                <div class="step-item">
                <div class="step-number">0</div>
                <div class="step-content">
                    <h4>Preámbulo</h4>
                    <p>Tener un helicóptero en tu hangar de aviones. Si no, ve a comprar uno en la concesionaria de aviones</p>
                </div>
                </div>
                <div class="step-item">
                <div class="step-number">1</div>
                <div class="step-content">
                    <h4>Invocar un Helicóptero</h4>
                    <p>Invoca un helicóptero desde el hangar de aviones</p>
                </div>
                </div>
                <div class="step-item">
                <div class="step-number">2</div>
                <div class="step-content">
                    <h4>Ir al Heliport</h4>
                    <p>Dirígete al heliport en el marcador amarillo marcado "NORTH"</p>
                </div>
                </div>
                <div class="step-item">
                <div class="step-number">3</div>
                <div class="step-content">
                    <h4>Comenzar la Misión</h4>
                    <p>Comienza la misión posicionándote en el punto de entrega</p>
                </div>
                </div>
            </div>
            </div>
        </section>

        <!-- Desbloqueos y Recompensas -->
        <section class="job-section">
            <div class="container">
                <h2 class="section-title">
                    <i class="fas fa-trophy"></i>
                    Desbloqueos y Recompensas
                </h2>

                <!-- Tabla de desbloqueos de niveles y vehículos -->
                <div class="table-section">
                    <div class="unlocks-table">
                        <div class="table-header">
                            <div>Nivel Requerido</div>
                            <div>Desbloqueo</div>
                            <div>Bonificación de Ganancias</div>
                        </div>
                        <div class="table-row">
                            <div class="level">1</div>
                            <div>Vuelos Regionales</div>
                            <div>Acceso a rutas cortas</div>
                        </div>
                        <div class="table-row">
                            <div class="level">20</div>
                            <div>Vuelos Express</div>
                            <div>+25% de ganancias en vuelos rápidos</div>
                        </div>
                        <div class="table-row">
                            <div class="level">45</div>
                            <div>Vuelos de Carga</div>
                            <div>+40% de ganancias, transporte de mercancías</div>
                        </div>
                        <div class="table-row">
                            <div class="level">65</div>
                            <div>Vuelos de Alta Velocidad</div>
                            <div>+65% de ganancias para rutas premium</div>
                        </div>
                        <div class="table-row">
                            <div class="level">80</div>
                            <div>Vuelos Nocturnos</div>
                            <div>Bonificación +30% entre 21h-7h</div>
                        </div>
                    </div>
                </div>

                <!-- Tabla de recompensas por tier -->
                <div class="table-section">
                    <div class="rewards-table">
                        <div class="table-header">
                            <div>Tipo</div>
                            <div>Distancia</div>
                            <div>Paradas</div>
                            <div>Ganancias</div>
                            <div>XP</div>
                        </div>
                        <div class="table-row">
                            <div class="level">Regional</div>
                            <div>0-5km</div>
                            <div>2-4 heliports</div>
                            <div>300-500$</div>
                            <div>150</div>
                        </div>
                        <div class="table-row">
                            <div class="level">Express</div>
                            <div>5-15km</div>
                            <div>3-6 heliports</div>
                            <div>600-900$</div>
                            <div>300</div>
                        </div>
                        <div class="table-row">
                            <div class="level">Carga</div>
                            <div>10-25km</div>
                            <div>2-3 almacenes</div>
                            <div>1000-1400$</div>
                            <div>450</div>
                        </div>
                        <div class="table-row">
                            <div class="level">Alta Velocidad</div>
                            <div>20km+</div>
                            <div>4+ heliports</div>
                            <div>1500-2200$</div>
                            <div>600</div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="job-navigation">
            <div class="container">
                <a href="/es/jobs" class="btn-secondary">
                    <i class="fas fa-arrow-left"></i>
                    Volver a los Trabajos
                </a>
            </div>
        </section>
    </main>

</Layout>

<style>
    @import url("../../../styles/helicopter.css");
</style>