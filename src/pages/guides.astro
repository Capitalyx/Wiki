---
import Layout from "../layouts/Layout.astro"
---

<Layout title="Guides" description="Guide pour Capitalyx">
  <!-- Breadcrumbs -->
    <section class="breadcrumb">
        <div class="container">
            <nav class="breadcrumb-nav">
                <div class="breadcrumb-item">
                    <i class="fas fa-home breadcrumb-icon"></i>
                    <a href="/">Accueil</a>
                </div>
                <span class="breadcrumb-separator">
                    <i class="fas fa-chevron-right"></i>
                </span>
                <div class="breadcrumb-item active">
                    <i class="fas fa-book-open breadcrumb-icon"></i>
                    <span>Guides</span>
                </div>
            </nav>
        </div>
    </section>

    <!-- Main Content -->
    <main class="main-content">
        <section class="page-hero">
            <div class="container">
                <h1 class="page-title">
                    <i class="fas fa-book-open"></i>
                    Guides du Serveur
                </h1>
                <p class="page-subtitle">Tous les guides pour bien commencer votre aventure tycoon sur Capitalyx</p>
            </div>
        </section>

        <section class="content-section">
            <div class="container">
                <!-- Bouton TOC fixe -->
                <button class="toc-fixed-button" onclick="openTOCModal()" title="Table des matières">
                    <i class="fas fa-list"></i>
                </button>

                <!-- Modal TOC -->
                <div class="toc-modal" id="tocModal">
                    <div class="toc-modal-content">
                        <div class="toc-modal-header">
                            <h3 class="toc-modal-title">
                                <i class="fas fa-list"></i>
                                Table des matières
                            </h3>
                            <button class="toc-modal-close" onclick="closeTOCModal()">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                        <ul class="toc-modal-list">
                            <li class="toc-modal-item">
                                <a href="#guides-debutant" class="toc-modal-link" onclick="closeTOCModal()">
                                    <i class="fas fa-play"></i>
                                    Guides Débutant
                                </a>
                            </li>
                            <li class="toc-modal-item">
                                <a href="#metiers-business" class="toc-modal-link" onclick="closeTOCModal()">
                                    <i class="fas fa-dollar-sign"></i>
                                    Métiers & Business
                                </a>
                            </li>
                            <li class="toc-modal-item">
                                <a href="#communication" class="toc-modal-link" onclick="closeTOCModal()">
                                    <i class="fas fa-comments"></i>
                                    Communication & Coopération
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="guides-grid">
                    <div class="guide-category" id="guides-debutant">
                        <div class="category-header">
                            <i class="fas fa-play"></i>
                            <h2>Guides Débutant</h2>
                        </div>
                        <div class="guide-list">
                            <div class="guide-item">
                                <div class="guide-icon">
                                    <i class="fas fa-server"></i>
                                </div>
                                <div class="guide-content">
                                    <h3>Comment Rejoindre le Serveur</h3>
                                    <p>Instructions complètes pour vous connecter à Capitalyx pour la première fois.</p>
                                    <div class="guide-steps">
                                        <ol>
                                            <li>Ouvrir FiveM</li>
                                            <li>Aller dans l'onglet Serveurs</li>
                                            <li>Rechercher "Capitalyx"</li>
                                            <li>Cliquer sur Se connecter</li>
                                        </ol>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="guide-category" id="metiers-business">
                        <div class="category-header">
                            <i class="fas fa-dollar-sign"></i>
                            <h2>Métiers & Business</h2>
                        </div>
                        <div class="guide-list">
                            <div class="guide-item">
                                <div class="guide-icon">
                                    <i class="fas fa-briefcase"></i>
                                </div>
                                <div class="guide-content">
                                    <h3>Choisir son Métier</h3>
                                    <p>Guide pour sélectionner le métier qui correspond à votre style de jeu.</p>
                                    <div class="money-methods">
                                        <ul>
                                            <li><strong>Taxi :</strong> Transport de passagers en ville</li>
                                            <li><strong>Conducteur de Train :</strong> Transport de passagers et marchandises</li>
                                            <li><strong>Carrier :</strong> Livraison de colis</li>
                                            <li><strong>Conducteur de Bus :</strong> Transport public de passagers</li>
                                            <li><strong>EMS :</strong> Services d'ambulance et intervention d'urgence</li>
                                            <li><strong>Pilote d'helicopter :</strong> Transport aérien de passagers</li>
                                            <li><strong>Mecanicien :</strong> Réparation et maintenance de véhicules</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="guide-category" id="communication">
                        <div class="category-header">
                            <i class="fas fa-comments"></i>
                            <h2>Communication & Coopération</h2>
                        </div>
                        <div class="guide-list">
                            <div class="guide-item">
                                <div class="guide-icon">
                                    <i class="fas fa-headset"></i>
                                </div>
                                <div class="guide-content">
                                    <h3>Systèmes de Communication</h3>
                                    <p>Guide des différents moyens de communiquer et collaborer.</p>
                                    <div class="chat-commands">
                                        <ul>
                                            <li><strong>/help</strong> - Demander de l'aide</li>
                                            <li><strong>/mp</strong> - Message Privé</li>
                                            <li><strong>/setLang &lt;fr/en/es/de&gt;</strong> - Changer la langue</li>
                                            <li><strong>/job</strong> - Permet d'envoyer un message à tous les joueurs qui ont le même job que le joueur</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Navigation rapide -->
                <div class="quick-navigation">
                    <h3><i class="fas fa-compass"></i> Navigation rapide</h3>
                    <div class="nav-links">
                        <a href="/rules" class="nav-link-card">
                            <i class="fas fa-gavel"></i>
                            <div>
                                <h4>Règlement</h4>
                                <p>Toutes les règles du serveur</p>
                            </div>
                        </a>
                        <a href="/commands" class="nav-link-card">
                            <i class="fas fa-terminal"></i>
                            <div>
                                <h4>Commandes</h4>
                                <p>Liste des commandes utiles</p>
                            </div>
                        </a>
                        <a href="/jobs" class="nav-link-card">
                            <i class="fas fa-briefcase"></i>
                            <div>
                                <h4>Métiers</h4>
                                <p>Guide des métiers disponibles</p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </main>
</Layout>

<style>
  @import url("../styles/guides.css");
</style>