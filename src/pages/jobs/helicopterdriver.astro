---
import Layout from "../../layouts/Layout.astro"
---

<Layout title="Pilote d'Hélicoptère" description="Guide complet pour devenir pilote d'hélicoptère sur Capitalyx">
    <main class="main-content">
        <!-- Titre de la page -->
        <section class="page-header">
            <div class="container">
                <div class="page-title-wrapper">
                    <div class="page-icon">
                        <i class="fas fa-bus"></i>
                    </div>
                    <div class="page-title-content">
                        <h1 class="page-main-title">Pilote d'Hélicoptère</h1>
                        <p class="page-description">Guide complet pour devenir pilote d'hélicoptère sur Capitalyx</p>
                    </div>
                </div>
            </div>
        </section>

        <section class="job-section location-section">
            <div class="container">
                <h2 class="section-title">
                    <i class="fas fa-map-marker-alt"></i>
                    Où Chercher
                </h2>
                <div class="location-grid">
                    <div class="location-item">
                        <div class="location-image">
                            <img src="/public/assets/img/jobs/helicopter/Zone.png" alt="Localisation sur la carte" loading="lazy">                        </div>
                        <div class="location-content">
                            <h3 class="location-title">En jeux</h3>
                        </div>
                    </div>
                    <div class="location-item">
                        <div class="location-image">
                            <img src="/public/assets/img/jobs/helicopter/Map.png" alt="Gare routière" loading="lazy">
                        </div>
                        <div class="location-content">
                            <h3 class="location-title">Localisation</h3>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Comment commencer -->
        <section class="job-section">
            <div class="container">
            <h2 class="section-title">
                <i class="fas fa-play-circle"></i>
                Comment Commencer
            </h2>
            <div class="steps-grid">
                <div class="step-item">
                <div class="step-number">0</div>
                <div class="step-content">
                    <h4>Préambule</h4>
                    <p>Avoir un hélicoptère dans son garage avions. Sinon aller en acheter un au concessionnaire avions</p>
                </div>
                </div>
                <div class="step-item">
                <div class="step-number">1</div>
                <div class="step-content">
                    <h4>Sortir un Hélicoptère</h4>
                    <p>Sortez un hélicoptère du garage avions</p>
                </div>
                </div>
                <div class="step-item">
                <div class="step-number">2</div>
                <div class="step-content">
                    <h4>Se Rendre à la Marina</h4>
                    <p>Rendez-vous à la marina sur le point jaune marqué "NORTH"</p>
                </div>
                </div>
                <div class="step-item">
                <div class="step-number">3</div>
                <div class="step-content">
                    <h4>Commencer la Mission</h4>
                    <p>Commencez la mission en vous plaçant au point d'arrivée</p>
                </div>
                </div>
            </div>
            </div>
        </section>

        <!-- Récompenses et différents niveaux-->
        <section class="job-section">
            <div class="container">
                <h2 class="section-title">
                    <i class="fas fa-trophy"></i>
                    Déblocages et Récompenses
                </h2>

                <!-- Tableau des déblocages de tiers et véhicules -->
                <div class="table-section">
                    <div class="unlocks-table">
                        <div class="table-header">
                            <div>Niveau Requis</div>
                            <div>Déblocage</div>
                            <div>Bonus Gains</div>
                        </div>
                        <div class="table-row">
                            <div class="level">1</div>
                            <div>Trains Régionaux</div>
                            <div>Accès aux lignes courtes</div>
                        </div>
                        <div class="table-row">
                            <div class="level">20</div>
                            <div>Trains Express</div>
                            <div>+25% de gains pour trajets rapides</div>
                        </div>
                        <div class="table-row">
                            <div class="level">45</div>
                            <div>Trains de Fret</div>
                            <div>+40% de gains, transport de marchandises</div>
                        </div>
                        <div class="table-row">
                            <div class="level">65</div>
                            <div>Trains Haute Vitesse</div>
                            <div>+65% de gains pour lignes premium</div>
                        </div>
                        <div class="table-row">
                            <div class="level">80</div>
                            <div>Trains de Nuit</div>
                            <div>Bonus +30% entre 21h-7h</div>
                        </div>
                    </div>
                </div>

                <!-- Tableau des récompenses par tier -->
                <div class="table-section">
                    <div class="rewards-table">
                        <div class="table-header">
                            <div>Type</div>
                            <div>Distance</div>
                            <div>Arrêts</div>
                            <div>Gains</div>
                            <div>XP</div>
                        </div>
                        <div class="table-row">
                            <div class="level">Régional</div>
                            <div>0-5km</div>
                            <div>2-4 stations</div>
                            <div>300-500$</div>
                            <div>150</div>
                        </div>
                        <div class="table-row">
                            <div class="level">Express</div>
                            <div>5-15km</div>
                            <div>3-6 stations</div>
                            <div>600-900$</div>
                            <div>300</div>
                        </div>
                        <div class="table-row">
                            <div class="level">Fret</div>
                            <div>10-25km</div>
                            <div>2-3 dépôts</div>
                            <div>1000-1400$</div>
                            <div>450</div>
                        </div>
                        <div class="table-row">
                            <div class="level">Haute Vitesse</div>
                            <div>20km+</div>
                            <div>4+ stations</div>
                            <div>1500-2200$</div>
                            <div>600</div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="job-navigation">
            <div class="container">
                <a href="/jobs" class="btn-secondary">
                    <i class="fas fa-arrow-left"></i>
                    Retour aux métiers
                </a>
            </div>
        </section>
    </main>

</Layout>

<style>
    @import url("../../styles/helicopter.css");
</style>